<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Picture-->
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtID"
                android:textSize="16dp"
                android:text="5614"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imvContactShow"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_action_user"
                android:layout_width="64dp"
                android:layout_height="64dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!--First-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Name Thai-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtNameThai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ธีรัวฒน์ หงษ์เวียงจันทร์"
                        android:textSize="16dp" />

                </LinearLayout>

                <!--Nickname-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtNickNameThai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="วัฒน์"
                        android:textSize="16dp"/>


                </LinearLayout>

            </LinearLayout>

            <!--Second-->
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Name Thai-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtNameEng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teerawat Hongwiangjan"
                        android:textSize="16dp" />

                </LinearLayout>

                <!--Nickname-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtNickNameEng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wat"
                        android:textSize="16dp"/>


                </LinearLayout>

            </LinearLayout>

            <!--Third-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Name Thai-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="teerawat@skyict.co.th"
                        android:textSize="16dp" />

                </LinearLayout>

                <!--Nickname-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1กญ9302"
                        android:textSize="16dp"/>


                </LinearLayout>

            </LinearLayout>

            <!--Four-->
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Name Thai-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--Title-->
                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0873704153"
                        android:textSize="16dp" />

                </LinearLayout>

                <!--Nickname-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>